        <dt>
            @Html.DisplayNameFor(model => model.FechaCierre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaCierre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Valor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Valor)
        </dd>

        @if (Model.Archivos != null && Model.Archivos.Count > 0)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Archivos)
            </dt>
            <dd>
                <ul>
                    @foreach (var archivo in Model.Archivos)
                    {
                        <li>
                            <a href="@archivo.ArchivoUrl" target="_blank">@archivo.ArchivoNombre</a>
                        </li>
                    }
                </ul>
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.OportunidadID }) |
    @Html.ActionLink("Regresar a la lista", "Index")
</p>
