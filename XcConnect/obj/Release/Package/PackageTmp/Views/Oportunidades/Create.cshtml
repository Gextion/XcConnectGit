    ViewBag.Title = "Oportunidades";
}

<h2>Crear Oportunidad</h2>

@using (Html.BeginForm("Create", "Oportunidades", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

